{
  "name": "pegakit-buttons",
  "version": "0.0.3",
  "description": "The default Button component. Part of PegaKit&#39;s pre-packaged UI Toolkit.",
  "scripts": {
    "lint": "stylelint '*/**/*.scss' --syntax scss",
    "sass": "node-sass --output-style compressed --source-map true --include-path ./node_modules/ -o ./ ./main.scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers 'last 2 versions' 'ie 9-11' -r demo/dist/main.css",
    "build": "npm run lint && npm run sass && npm run autoprefixer && ncp demo/assets/ demo/dist/assets",
    "start": "npm run build && onchange '*/**/*.scss' -- npm run build",
    "serve": "http-server demo",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pega-digital/pegakit-buttons.git"
  },
  "author": "Salem Ghoweri <salem.ghoweri@pega.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pega-digital/pegakit-buttons/issues"
  },
  "keywords": [
    "scss",
    "css",
    "twig",
    "html",
    "javascript",
    "js",
    "pegakit",
    "pegakit-buttons",
    "button"
  ],
  "homepage": "https://github.com/pega-digital/pegakit-buttons#readme",
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^7.9.0",
    "stylelint-scss": "^1.4.3",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "autoprefixer": "^6.3.5",
    "http-server": "^0.9.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "onchange": "^2.2.0",
    "postcss-cli": "^2.5.1"
  },
  "dependencies": {
    "pegakit-css": "*"
  }
}

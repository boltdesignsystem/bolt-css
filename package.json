{
  "name": "pegakit-css",
  "version": "0.0.0",
  "description": "PegaKit's site-agnostic CSS Framework core. Used to built PegaKit's UI Components.",
  "main": "pegakit-css/pegakit-css.scss",
  "scripts": {
    "lint": "stylelint '*/02-tools/*.scss' --syntax scss",
    "sass": "node-sass --output-style --include-path ./pegakit-css/ -o demo/dist demo/scss/main.scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers 'last 2 versions' 'ie 9-11' -r demo/dist/main.css",
    "build": "npm run lint && npm run sass && npm run autoprefixer && ncp demo/assets/ demo/dist/assets",
    "start": "npm run build && onchange '*/**/*.scss' -- npm run build",
    "serve": "http-server demo",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pega-digital/pegakit-css.git"
  },
  "keywords": [
    "pegakit",
    "css",
    "framework",
    "itcss",
    "bem",
    "sass",
    "oocss"
  ],
  "author": "Salem Ghoweri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pega-digital/pegakit-css/issues"
  },
  "homepage": "https://github.com/pega-digital/pegakit-css#readme",
  "dependencies": {
    "breakpoint-sass": "^2.7.0",
    "modularscale-sass": "^2.1.1",
    "normalize-scss": "^5.0.3",
    "sassy-maps": "at-import/Sassy-Maps#0.x.x",
    "stylelint-config-guidelines": "^1.1.5",
    "stylelint-selector-pattern": "0.0.1"
  },
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^7.9.0",
    "stylelint-scss": "^1.4.3",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "autoprefixer": "^6.3.5",
    "http-server": "^0.9.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "onchange": "^2.2.0",
    "postcss-cli": "^2.5.1"
  },
  "peerDependencies": {
    "stylelint": "^7.9.0",
    "stylelint-scss": "^1.4.3",
    "stylelint-selector-bem-pattern": "^1.0.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ]
  }
}
